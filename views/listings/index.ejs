<% layout("/layouts/boilerplate")%>
<body>

    <h3> All Listings  </h3>
    <form action="/listings/new" method="get">
      <!--  <button type="submit">Add new Listing</button> -->
    </form>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  
  <% for(let list of lists){ %>

    <a href="/listings/<%=list._id%>/detail">
      <div class="card " >
 
<img src= " <%=list.image %>" alt=" <%=list.image %>" class="card-img-top">
<div class="card-img-overlay"></div>

  
  <div class="card-body">
       
    
             
    <p class="p-title"> <b><%=list.title%></b></p>
    <p>&#8377;<%=list.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");%>/night</p>


  </div>
</div>
    </a>
    
 <% } %>

</div>
</body>

